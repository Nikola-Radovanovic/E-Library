@model Library.Models.LibraryModels.Author
@{
    ViewData["Title"] = "DeleteAuthor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Da li ste sigurni da želite obrisati autora "@Model.AuthorName"?</h2>
<div class="row">
    <div class="col-lg-4">
        <form asp-action="DeleteAuthor" asp-controller="Authors">
            @Html.HiddenFor(a => a.Id)
            <div class="form-group">
                <input type="submit" value="Obriši autora" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>