@model Library.Models.LibraryModels.Reservation
@{
    ViewData["Title"] = "DeleteReservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Da li ste sigurni da želite obrisati rezervaciju za knjigu "@Model.Book.Title", korisnika "@Model.ApplicationUser.Firstname @Model.ApplicationUser.Lastname"?</h2>
<div class="row">
    <div class="col-lg-4">
        <form asp-action="DeleteReservation" asp-controller="Reservations">
            @Html.HiddenFor(r => r.Id)
            <div class="form-group">
                <input type="submit" value="Obriši rezervaciju" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>