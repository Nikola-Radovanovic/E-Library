@model Library.Models.LibraryModels.Genre
@{
    ViewData["Title"] = "CreateGenreForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-4">
        <form asp-action="CreateOrUpdateGenre" asp-controller="Genres">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GenreName" class="control-label"></label>
                <input asp-for="GenreName" class="form-control" />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            @Html.HiddenFor(g => g.Id)
            @Html.AntiForgeryToken()
            <div class="form-group">
                <input type="submit" value="Dodaj žanr" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}