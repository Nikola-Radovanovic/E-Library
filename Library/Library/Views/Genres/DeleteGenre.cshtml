@model Library.Models.LibraryModels.Genre
@{
    ViewData["Title"] = "DeleteGenre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Da li ste sigurni da želite obrisati žanr "@Model.GenreName"?</h2>
<div class="row">
    <div class="col-lg-4">
        <form asp-action="DeleteGenre" asp-controller="Genres">
            @Html.HiddenFor(g => g.Id)
            <div class="form-group">
                <input type="submit" value="Obriši žanr" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>