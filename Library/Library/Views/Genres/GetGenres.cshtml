@model IEnumerable<Library.Models.LibraryModels.Genre>
@{
    ViewData["Title"] = "GetGenres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model is null)
{
    <div class="h2">Nema unetih žanrova</div>
}
else
{
    <div class="row">
        <div class="col-lg-6 offset-3">
            <div class="row">
                <div class="col-lg-7">
                    <h3 class="text-center">Žanrovi</h3>
                </div>
                <div class="col-lg-5">
                    <a asp-action="CreateGenreForm" asp-controller="Genres" class="btn btn-success float-right">Dodaj novi žanr</a>
                </div>
            </div>
            <table class="table table-hover mt-2">
                <tbody>
                    @foreach (var genre in Model)
                    {
                        <tr>
                            <td class="text-center" style="vertical-align: middle">@genre.GenreName</td>
                            <td class="text-center">
                                @Html.ActionLink("Izmeni", "UpdateGenreForm", "Genres", new { Id = genre.Id }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Obriši", "DeleteGenre", "Genres", new { Id = genre.Id }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}