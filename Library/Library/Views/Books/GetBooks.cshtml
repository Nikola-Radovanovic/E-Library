@model IEnumerable<Library.Models.LibraryModels.Book>
@{
    ViewData["Title"] = "GetBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row offset-3">
    <div class="col-lg-8 text-center">
        <h2 class="display-4">Knjige</h2>
    </div>
    <div class="col-lg-3">
        <a asp-action="CreateBookForm" asp-controller="Books" class="btn btn-success mt-4">Dodaj novu knjigu</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-10 offset-1">
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-lg-6 mt-4">
                    <div class="card border-warning">
                        <div class="card-header text-center">
                            <div class="fa-picture-o">
                                <i class="fas fa-book fa-5x text-secondary"></i>
                                <h5 class="mt-3">@book.Title</h5>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <table class="table table-bordered bg-light">
                                        <tbody>
                                            <tr>
                                                <td>@Html.DisplayNameFor(b => b.AuthorId)</td>
                                                <td>@book.Author.AuthorName</td>
                                            </tr>
                                            <tr>
                                                <td>@Html.DisplayNameFor(b => b.PublisherId)</td>
                                                <td>@book.Publisher.PublisherName</td>
                                            </tr>
                                            <tr>
                                                <td>@Html.DisplayNameFor(b => b.GenreId)</td>
                                                <td>@book.Genre.GenreName</td>
                                            </tr>
                                            <tr>
                                                <td>@Html.DisplayNameFor(b => b.NumberOfPages)</td>
                                                <td>@book.NumberOfPages</td>
                                            </tr>
                                            <tr>
                                                <td>@Html.DisplayNameFor(b => b.ISBN)</td>
                                                <td>@book.ISBN</td>
                                            </tr>
                                            <tr>
                                                <td>@Html.DisplayNameFor(b => b.NumberOfCopies)</td>
                                                <td>@book.NumberOfCopies</td>
                                            </tr>
                                            <tr>
                                                <td>@Html.DisplayNameFor(b => b.EntryDate)</td>
                                                <td>@string.Format("{0:dd/MMM/yyyy}", book.EntryDate)</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    @Html.ActionLink("Izmeni", "UpdateBookForm", "Books", new { Id = book.Id }, new { @class = "btn btn-primary btn-block" })
                                </div>
                                <div class="col-lg-6">
                                    @Html.ActionLink("Obriši", "DeleteBook", "Books", new { Id = book.Id }, new { @class = "btn btn-danger btn-block" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>