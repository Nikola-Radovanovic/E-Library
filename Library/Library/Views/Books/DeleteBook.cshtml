@model Library.Models.LibraryModels.Book
@{
    ViewData["Title"] = "DeleteBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Da li ste sigurni da želite obrisati knjigu "@Model.Title"?</h2>
<div class="row">
    <div class="col-lg-4">
        <form asp-action="DeleteBook" asp-controller="Books">
            @Html.HiddenFor(b => b.Id)
            <div class="form-group">
                <input type="submit" value="Obriši knjigu" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>