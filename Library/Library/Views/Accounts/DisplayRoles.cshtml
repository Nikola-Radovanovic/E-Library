@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "DisplayRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Upravljaj rolama</h3>
<hr />

@await Html.PartialAsync("_UsersRolesNavbarPartial")

<div class="row mt-3">
    <div class="col-lg-6">
        <h3 class="text-center">Dodaj novu rolu</h3>
        <form asp-action="CreateRole" asp-controller="Accounts" class="mt-4">
            <div class="form-group">
                <input type="text" id="role" name="role" class="form-control" placeholder="Unesite naziv role" />
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj rolu" class="btn btn-outline-success btn-block" />
            </div>
        </form>
    </div>
    <div class="col-lg-6">
        <h3 class="text-center">Role</h3>
        @if (Model.Count == 0)
        {
            <h3>Nema rola</h3>
        }
        else
        {
            <table class="table table-bordered mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center">Rola</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td class="text-center">@role.Name</td>
                            <td class="text-center">
                                <a asp-route-role="@role.Name" asp-action="DeleteRole" onclick="return confirm('Da li ste sigurni da želite izbrisati rolu?')" class="btn btn-outline-danger">Obriši rolu</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>