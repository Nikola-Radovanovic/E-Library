@model List<string>
@{
    ViewData["Title"] = "DisplayUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Korisnik: @ViewBag.UserName</h3>
<hr />

@await Html.PartialAsync("_UsersRolesNavbarPartial")

@if (Model.Count == 0)
{
    <h3>Nema rola</h3>
}
else
{
    <div class="row">
        <div class="col-lg-6">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Rola</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role</td>
                            <td>
                                <a asp-route-role="@role" asp-route-userName="@ViewBag.UserName" asp-action="DeleteUserRole" onclick="return confirm('Da li ste sigurni da zelite obrisati rolu korisnika?')">Obriši rolu</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}