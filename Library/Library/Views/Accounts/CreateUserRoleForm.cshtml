@model Library.Models.UserRoleModel
@{
    ViewData["Title"] = "CreateUserRoleForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Dodaj rolu korisniku</h3>
<hr />

@await Html.PartialAsync("_UsersRolesNavbarPartial")

<div class="row">
    <div class="col-lg-6 offset-3">
        <form asp-action="CreateUserRole" asp-controller="Accounts">
            <div class="form-group text-center">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" asp-items="Model.UserList" class="form-control">
                    <option value="" selected disabled>Odaberite korisnika</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="RoleName" class="control-label"></label>
                <select asp-for="RoleName" asp-items="Model.RoleList" class="form-control">
                    <option value="" selected disabled>Odaberite rolu</option>
                </select>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj rolu korisniku" class="btn btn-outline-success btn-block" />
            </div>
        </form>
    </div>
</div>